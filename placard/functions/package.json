{
  "name": "functions",
  "private": true,
  "version": "0.1.0",
  "description": "Cloud functions for Firebase",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "lint": "eslint . && ",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "predeploy": "cd app && yarn build && cd ..",
    "predev": "cd app && run.env -p ../../.env yarn build && cd ..",
    "deploy": "cd .. && firebase deploy",
    "dev": "cd .. && run.env firebase serve",
    "logs": "firebase functions:log",
    "precommit": "lint-staged",
    "postinstall": "cd .. && ln -s functions/node_modules node_modules"
  },
  "workspaces": [
    "app",
    "server"
  ],
  "dependencies": {
    "@firebase/app-types": "^0.3.4",
    "@firebase/util": "^0.2.7",
    "firebase-admin": "^7.0.0",
    "firebase-functions": "^2.2.0"
  },
  "devDependencies": {
    "glob": "^7.1.3",
    "husky": "^1.3.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "run.env": "^1.1.0",
    "twitter-node-client": "^0.0.6"
  }
}
